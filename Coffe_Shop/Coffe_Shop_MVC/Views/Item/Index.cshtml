@{
}
@model List<Item>

    <div class="row justify-content-center p-5">

        <div class="col-7">
        <a class="fs-3" asp-controller="Item" asp-action="Add">
            <i class="bi bi-plus-square"></i>
        </a>
            <table class="table">
                <thead>
                    <tr>
                    <th> Name </th>
                    <th> Description </th>
                    <th> Price </th>
                    <th> Created At </th>
                    <th>  Control </th>
                    </tr>
                </thead>
                <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.Description</td>
                        <td>@item.Price</td>
                        <td>@item.Created_At</td>
                        <td>
                            <a asp-controller ="Item" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                         <a asp-controller="Item" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                            <a asp-controller="Item" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
            </table>

        </div>

    </div>